pkgname=('lib32-vulkan-mesa-layers-staging' 'lib32-opencl-mesa-staging'
         'lib32-vulkan-intel-staging' 'lib32-vulkan-radeon-staging'
         'lib32-libva-mesa-driver-staging' 'lib32-mesa-staging')
pkgdesc="An open-source implementation of the OpenGL specification (32-bit), staging RC"
_rc="-rc4"
_pkgver=22.3.0${_rc}
pkgver=${_pkgver/-/}
pkgrel=1
arch=('x86_64')
makedepends=('python-mako' 'lib32-libxml2' 'lib32-expat' 'lib32-libx11' 'xorgproto' 'lib32-libdrm'
